<Window x:Class="ActiveSuspensionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActiveSuspensionApp"
        xmlns:oxy="http://oxyplot.org/wpf"
        
        mc:Ignorable="d"
        Title="Active Suspension Model App" Height="450" Width="800">
    <DockPanel>


        
        
        <StackPanel DockPanel.Dock="Left" Width="300">
            <local:SystemControl DataContext="{Binding SelectedSystemParams}" />
            <Button Content="Show Parameters" Click="Button_SendParameters"/>
            <Button Content="Run Model" Click="Button_RunModel"/>
        </StackPanel>

        <oxy:PlotView Model="{Binding PlotModel}"/>

    </DockPanel>
    

        

    
</Window>
